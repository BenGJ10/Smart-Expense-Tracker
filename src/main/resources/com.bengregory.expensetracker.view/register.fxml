<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #2B2D42;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.bengregory.expensetracker.controller.RegisterController">

    <center>
        <AnchorPane prefHeight="400.0" prefWidth="600.0" BorderPane.alignment="CENTER">
            <children>

                <!-- Register Title -->
                <Label alignment="CENTER" layoutX="122.0" layoutY="67.0" prefHeight="65.0" prefWidth="356.0" text="Smart Expense Tracker" textFill="#FFFFFF">
                    <font>
                        <Font name="System Bold" size="32.0" />
                    </font>
                </Label>

                <!-- Username Field -->
                <TextField fx:id="usernameField" layoutX="166.0" layoutY="163.0" prefHeight="32.0" prefWidth="256.0" promptText="Username">
                    <font>
                        <Font name="Verdana" size="16.0" />
                    </font>
                </TextField>

                <!-- Password Field -->
                <PasswordField fx:id="passwordField" layoutX="166.0" layoutY="218.0" prefHeight="32.0" prefWidth="256.0" promptText="Password">
                    <font>
                        <Font name="Verdana" size="16.0" />
                    </font>
                </PasswordField>

                <!-- Register Button -->
                <Button fx:id="registerButton" alignment="CENTER" layoutX="337.0" layoutY="286.0" mnemonicParsing="false" prefHeight="29.0" prefWidth="85.0" style="-fx-background-color: #cc0000; -fx-text-fill: #ffffff;" text="Register" onAction="#handleRegister">
                    <font>
                        <Font name="Verdana" size="15.0" />
                    </font>
                </Button>

                <!-- Back to Login Button -->
                <Button fx:id="backButton" alignment="CENTER" layoutX="166.0" layoutY="286.0" mnemonicParsing="false" prefHeight="29.0" prefWidth="125.0" style="-fx-background-color: #206dc5; -fx-text-fill: #FFFFFF;" text="Back to Login" onAction="#handleBack">
                    <font>
                        <Font name="Verdana" size="15.0" />
                    </font>
                </Button>

                <!-- Error Label -->
                <Label fx:id="errorLabel" layoutX="144.0" layoutY="337.0" prefWidth="300.0" text=" " textFill="#FF0000">
                    <font>
                        <Font name="Verdana" size="13.0" />
                    </font>
                </Label>

            </children>
        </AnchorPane>
    </center>
</BorderPane>

