<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="root"
      alignment="CENTER"
      spacing="30"
      prefWidth="800.0"
      prefHeight="600.0"
      styleClass="dashboard"
      stylesheets="@styles.css"
      xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.bengregory.expensetracker.controller.DashboardController">

    <!-- Welcome Label -->
    <Label fx:id="welcomeLabel"
           contentDisplay="CENTER"
           styleClass="title-label"
           text="Welcome, User" />

    <!-- Top Navigation Bar -->
    <HBox alignment="CENTER"
          spacing="20"
          styleClass="nav-bar">
        <Button fx:id="addIncomeButton" text="Add Income" styleClass="nav-button" />
        <Button fx:id="addExpenseButton" text="Add Expense" styleClass="nav-button" />
        <Button fx:id="addBudgetButton" text="Add Budget" styleClass="nav-button" />
        <Button fx:id="viewProfileButton" text="View Profile" styleClass="nav-button" />
        <Button fx:id="logoutButton" text="Logout" onAction="#handleLogout" styleClass="logout-button" />
    </HBox>

    <!-- Summary Section -->
    <GridPane fx:id="summaryGrid"
              alignment="CENTER"
              hgap="40"
              vgap="15">
        <Label text="Total Income:" styleClass="summary-label"
               GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <Label fx:id="totalIncomeLabel" text="₹0.00" styleClass="summary-value"
               GridPane.columnIndex="1" GridPane.rowIndex="0" />

        <Label text="Total Expense:" styleClass="summary-label"
               GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <Label fx:id="totalExpenseLabel" text="₹0.00" styleClass="summary-value"
               GridPane.columnIndex="1" GridPane.rowIndex="1" />

        <Label text="Current Balance:" styleClass="summary-label"
               GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <Label fx:id="currentBalanceLabel" text="₹0.00" styleClass="summary-value"
               GridPane.columnIndex="1" GridPane.rowIndex="2" />

        <columnConstraints>
            <ColumnConstraints halignment="RIGHT" />
            <ColumnConstraints halignment="LEFT" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
        </rowConstraints>
    </GridPane>

    <!-- Recent Activity -->
    <VBox fx:id="recentActivityBox"
          spacing="8"
          alignment="CENTER">
        <Label text="Recent Activity" styleClass="welcome-label" />
        <Label fx:id="activity1" text="-" styleClass="activity-label" />
        <Label fx:id="activity2" text="-" styleClass="activity-label" />
        <Label fx:id="activity5" text="-" styleClass="activity-label" />
    </VBox>

</VBox>
