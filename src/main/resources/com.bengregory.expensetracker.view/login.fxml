<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #2B2D42;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.bengregory.expensetracker.controller.LoginController">

    <center>
        <VBox alignment="CENTER" maxWidth="300" spacing="15" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="50" />
            </padding>

            <Label alignment="CENTER" prefHeight="65.0" prefWidth="346.0" text="Smart Expense Tracker" textFill="WHITE">
                <font>
                    <Font name="System Bold" size="30.0" />
                </font>
            </Label>

            <TextField fx:id="usernameField" prefHeight="32.0" prefWidth="256.0" promptText="Username">
                <font>
                    <Font name="Verdana" size="16.0" />
                </font>
            </TextField>

            <PasswordField fx:id="passwordField" prefHeight="32.0" prefWidth="256.0" promptText="Password">
                <font>
                    <Font name="Verdana" size="16.0" />
                </font>
            </PasswordField>

            <HBox alignment="CENTER" spacing="10">
                <Button fx:id="loginButton" mnemonicParsing="false" onAction="#handleLogin" prefHeight="29.0" prefWidth="85.0" style="-fx-background-color: #206dc5; -fx-text-fill: #ffffff;" text="Login">
                    <font>
                        <Font name="Verdana" size="15.0" />
                    </font>
                </Button>

                <Button fx:id="registerButton" mnemonicParsing="false" onAction="#handleRegister" prefHeight="29.0" prefWidth="85.0" style="-fx-background-color: #cc0000; -fx-text-fill: #ffffff;" text="Register">
                    <font>
                        <Font name="Verdana" size="15.0" />
                    </font>
                </Button>
            </HBox>

            <Label fx:id="errorLabel" alignment="CENTER" prefWidth="300.0" text=" " textFill="#FF0000">
                <font>
                    <Font name="Verdana" size="13.0" />
                </font>
            </Label>
        </VBox>
    </center>
</BorderPane>
